DSC=ArmPlatformPkg/ArmVExpressPkg/ArmVExpress-RTSM-A15_MPCore.dsc
ARCH=ARM
UEFI_BIN=RTSM_VE_CORTEX-A15_MPCORE_EFI.fd
UEFI_IMAGE_DIR=ArmVExpress-RTSM-A15_MPCore-ArmBds

[tc2-armbds]
